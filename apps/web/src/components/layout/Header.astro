---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/cv', label: 'CV' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-border bg-bg-primary/80 backdrop-blur-md">
  <div class="container">
    <nav class="flex items-center justify-between h-16">
      <a
        href="/"
        class="text-xl font-display font-semibold text-accent hover:text-accent-hover transition-colors duration-fast"
      >
        Noah Kellner
      </a>

      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                'text-sm font-sans transition-colors duration-fast relative',
                currentPath === item.href
                  ? 'text-accent font-medium'
                  : 'text-text-secondary hover:text-text-primary',
              ]}
            >
              {item.label}
              {currentPath === item.href && (
                <span class="absolute -bottom-1 left-0 right-0 h-px bg-accent" />
              )}
            </a>
          </li>
        ))}
      </ul>

      <a
        href="/chat"
        class="hidden md:block px-4 py-2 text-sm font-sans font-medium bg-accent text-bg-primary rounded-lg hover:bg-accent-hover transition-colors duration-fast"
      >
        Let's Talk
      </a>

      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-text-secondary hover:text-text-primary transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>

  <div
    id="mobile-menu"
    class="hidden md:hidden border-t border-border bg-bg-primary"
  >
    <ul class="container py-4 space-y-4">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              'block text-base font-sans transition-colors duration-fast',
              currentPath === item.href
                ? 'text-accent font-medium'
                : 'text-text-secondary hover:text-text-primary',
            ]}
          >
            {item.label}
          </a>
        </li>
      ))}
      <li class="pt-2">
        <a
          href="/chat"
          class="block w-full px-4 py-2 text-center text-sm font-sans font-medium bg-accent text-bg-primary rounded-lg hover:bg-accent-hover transition-colors duration-fast"
        >
          Let's Talk
        </a>
      </li>
    </ul>
  </div>
</header>

<div class="h-16"></div>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
