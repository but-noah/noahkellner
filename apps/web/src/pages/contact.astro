---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactFlow from '../components/contact/ContactFlow';

const quickLinks = [
  {
    icon: 'email',
    label: 'Email',
    value: 'hello@noah-kellner.de',
    href: 'mailto:hello@noah-kellner.de',
  },
  {
    icon: 'linkedin',
    label: 'LinkedIn',
    value: '/in/noahkellner',
    href: 'https://linkedin.com/in/noahkellner',
  },
  {
    icon: 'github',
    label: 'GitHub',
    value: '@noahkellner',
    href: 'https://github.com/noahkellner',
  },
];
---

<BaseLayout
  title="Contact – Noah Kellner"
  description="Get in touch with Noah Kellner. Whether it's about a job opportunity, project inquiry, or just to say hello."
>
  <section class="section pt-8 pb-0">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16 animate-element" style="--delay: 0">
          <p class="text-accent text-sm font-sans uppercase tracking-wider mb-4">
            Get in Touch
          </p>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6">
            Let's Start a<br />
            <span class="text-accent">Conversation</span>
          </h1>
          <p class="text-lg text-text-secondary max-w-2xl mx-auto leading-relaxed">
            I'm always interested in hearing about new opportunities, interesting projects,
            or just connecting with fellow tech enthusiasts.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="section pt-0">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16 max-w-6xl mx-auto">
        <!-- Contact Flow (Main) -->
        <div class="lg:col-span-3 animate-element" style="--delay: 1">
          <ContactFlow client:load />
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Alternative: AI Chat -->
          <div class="animate-element" style="--delay: 2">
            <div class="p-6 bg-bg-secondary/50 rounded-2xl border border-border">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-accent/10 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display font-semibold">Prefer a conversation?</h3>
                  <p class="text-sm text-text-tertiary">Chat with AI Noah</p>
                </div>
              </div>
              <p class="text-text-secondary text-sm mb-4 leading-relaxed">
                Get instant answers about my work, experience, or availability through
                an AI-powered chat experience.
              </p>
              <a
                href="/chat"
                class="inline-flex items-center gap-2 text-accent hover:text-accent-hover transition-colors text-sm font-medium"
              >
                Start Chat
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="animate-element" style="--delay: 3">
            <h3 class="text-sm font-sans font-semibold text-text-tertiary uppercase tracking-wider mb-4">
              Quick Links
            </h3>
            <div class="space-y-3">
              {quickLinks.map((link) => (
                <a
                  href={link.href}
                  target={link.href.startsWith('http') ? '_blank' : undefined}
                  rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                  class="group flex items-center gap-4 p-3 rounded-lg hover:bg-bg-secondary/50 transition-all duration-300"
                >
                  <div class="w-10 h-10 bg-bg-secondary rounded-lg flex items-center justify-center border border-border group-hover:border-accent/30 transition-colors">
                    {link.icon === 'email' && (
                      <svg class="w-5 h-5 text-text-secondary group-hover:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    )}
                    {link.icon === 'linkedin' && (
                      <svg class="w-5 h-5 text-text-secondary group-hover:text-accent transition-colors" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    )}
                    {link.icon === 'github' && (
                      <svg class="w-5 h-5 text-text-secondary group-hover:text-accent transition-colors" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    )}
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="text-sm text-text-tertiary">{link.label}</div>
                    <div class="text-text-primary truncate group-hover:text-accent transition-colors">{link.value}</div>
                  </div>
                  <svg class="w-4 h-4 text-text-tertiary group-hover:text-accent transition-all duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              ))}
            </div>
          </div>

          <!-- Response Time -->
          <div class="animate-element" style="--delay: 4">
            <div class="p-4 rounded-xl bg-accent/5 border border-accent/20">
              <div class="flex items-center gap-3">
                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <div>
                  <div class="text-sm font-medium text-text-primary">Usually responds within 24h</div>
                  <div class="text-xs text-text-tertiary">Available for new opportunities</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Location -->
          <div class="animate-element" style="--delay: 5">
            <div class="flex items-center gap-3 text-text-secondary">
              <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="text-sm">Based in Germany • Working globally</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center animate-element" style="--delay: 6">
        <p class="text-text-tertiary text-sm">
          Looking for my work history?
          <a href="/cv" class="text-accent hover:text-accent-hover transition-colors ml-1">
            View my CV
          </a>
          <span class="mx-2">•</span>
          Check out my
          <a href="/projects" class="text-accent hover:text-accent-hover transition-colors ml-1">
            projects
          </a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Animate Elements */
  .animate-element {
    opacity: 0;
    transform: translateY(20px);
  }

  .animate-element.visible {
    animation: slideUp 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: calc(var(--delay, 0) * 0.1s);
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  function initContactAnimations() {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );

    document.querySelectorAll('.animate-element').forEach((el) => {
      el.classList.remove('visible');
      observer.observe(el);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initContactAnimations);
  } else {
    initContactAnimations();
  }

  document.addEventListener('astro:page-load', initContactAnimations);
</script>
